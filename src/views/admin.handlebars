<div class="p-4 h-auto">
  <nav class="mb-4 py-8 bg-gray-900/80 rounded-md">
    <ul class="flex flex-row flex-wrap gap-2 justify-center">
      <li>
        <a href="/home">
          <button
            class="text-slate-100 bg-blue-600 hover:bg-blue-700 active:bg-blue-900 focus:ring-2 focus:outline-none focus:ring-blue-700 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
          >Home 🏚️</button>
        </a>
      </li>
      <li>
        <a href="/realTimeProducts">
          <button
            class="text-slate-100 bg-blue-600 hover:bg-blue-700 active:bg-blue-900 focus:ring-2 focus:outline-none focus:ring-blue-700 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
          >Real Time Products 🛩️</button>
        </a>
      </li>
      <li>
        <a href="/chat">
          <button
            class="text-slate-100 bg-blue-600 hover:bg-blue-700 active:bg-blue-900 focus:ring-2 focus:outline-none focus:ring-blue-700 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mr-2"
          >Chat 💬</button>
        </a>
      </li>
    </ul>
  </nav>
  <h1 class="text-center my-8 font-mono text-xl text-slate-200">User administration</h1>
  <div class="flex justify-center flex-col gap-4 mx-12">
    {{#each parsedUsers}}
      <div class="bg-slate-600/50 flex flex-row items-center gap-2 rounded-md hover:bg-slate-500/50 transition-all duration-75">
        {{#if this.profile_picture}}
            <img
                src="/{{this.profile_picture}}"
                alt="profile picture"
                class="w-12 h-12 m-2 mx-4 ring-2 ring-slate-500 rounded-full my-4 object-cover"
            />
          {{else}}
          <svg
            class="w-14 h-14 m-2 mx-4 py-[2px] rounded-full text-gray-400"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
              clip-rule="evenodd"
            ></path>
          </svg>
        {{/if}}
        <div class="flex justify-between w-full">
          <div class="flex flex-col gap-1">
            <h3 class="text-lg font-semibold tracking-wider text-slate-100">{{this.name}}</h3>
            <p class="text-sm font-light text-slate-300">Last connection: {{this.last_connection}}</p>
          </div>
        <button id="deleteUser-{{this.cart}}" class="text-slate-100 bg-red-700 hover:bg-red-800 focus:ring-2 focus:outline-none focus:ring-red-600 font-medium rounded-lg text-sm w-auto px-3 mx-4 text-center"><span>Delete user</span></button>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="flex">
    <button id="deleteInactiveUsers" class="text-slate-100 bg-red-700 hover:bg-red-800 focus:ring-2 focus:outline-none focus:ring-red-600 shadow-md shadow-red-700/60 font-medium rounded-md text-lg w-auto p-3 my-4 ml-14 text-center"><span>Delete inactive users</span></button>
  </div>
<script
  src="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js
"
></script>
