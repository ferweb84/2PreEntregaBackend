<div id="app">
  <h3 id="productId">Details of the product with the ID
    {{product._id}}</h3>
  <input style='visibility: hidden' type="text" name="cid" id="cid" value={{user.cart}} />
  <h2 style='display:none'>{{user.cart}}</h2>
  <input style='visibility: hidden' type="text" name="pid" id="pid" value={{product._id}} >
  <div id="productDetail" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <div id="product-{{product._id}}" class="max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700 m-1">
      <div>
        {{#each product.thumbnails}}
        <img src="{{this}}" alt="product image" />
        {{/each}}
      </div>
      <div>
        <h5 id="title">{{product.title}}</h5>
        <p>Description:
          {{product.description}}</p>
        <p>Category:
          {{product.category}}</p>
        <p id="stock">Available stock:
          {{product.stock}}</p>
        <p>Product code:
          {{product.code}}</p>

        <div>
          <p>${{product.price}}</p>
          <button id="botonForm">Add to Cart ðŸ›’</button>
        </div>
      </div>
    </div>
