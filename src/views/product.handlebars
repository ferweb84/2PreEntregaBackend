<div id="app">
    <h1 id="productId">Details of the product with the ID
        {{product._id}}</h1>
    <div id="productDetail" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <div id="product-{{product._id}}" class="max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700 m-1">
            <div>
                {{#each product.thumbnails}}
                <img src="http://localhost:8080/{{this}}" alt="product image" />
                {{/each}}
            </div>
            <div>
                <h5 id="title">{{product.title}}</h5>
                <p>Description:
                    {{product.description}}</p>
                <p>Category:
                    {{product.category}}</p>
                <p>Available stock:
                    {{product.stock}}</p>
                <p>Product code:
                    {{product.code}}</p>

                    <div>
                        <p>${{product.price}}</p>
                        <button id="botonForm">Add to Cart ðŸ›’</button>
                    </div>
                    <div>
                        <input placeholder=" " type="text" name="cid" id="cid" required />
                        <label for="cid">Cart ID</label>
                    </div>
           
            </div>
        </div>
    </div>
</div>
<script src="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.all.min.js
"></script>
<script src="/js/product.js"></script>
