{{!< main}}

<div class="container-fluid">
    <div class="d-flex flex-wrap flex-row justify-content-evenly align-items-center vh-100 m-5">
        <div class="col text-center">
            {{#each product.thumbnails}}
                <img src="{{this}}" alt="product-image" class="img-fluid">
            {{/each}}
        </div>
        <div class="col d-flex flex-column">
            <h2>{{product.title}}</h2>
            <p>{{product.description}}</p>
            <hr />
            <div class="d-flex flex-column gap-4">
                <small class="text-muted">Stock: {{product.stock}}</small>
                <h3>${{product.price}}</h3>
            </div>
            {{#if user}}
            <div class="d-grid mt-3">
                <button class="btn btn-primary" onclick="addToCart('{{#if @root.user}}{{@root.user.cart}}{{/if}}', '{{product._id}}')">
                    <i class="fa-solid fa-cart-plus"></i> Agregar al carrito
                </button>
            </div>
            {{else}}
            <div class="d-grid mt-3">
                <a class="btn btn-primary" href="/login">
                    Iniciar sesi√≥n para comprar
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<script src="../js/index.js"></script>